
#include <stdio.h>
#include <stdlib.h>
/*필요한 요소 개수의 배열을 자유롭게 만드는 형식*/

/*calloc*/
/* void *calloc(size_t nmemb,size_t size);*/
/* 크기가 size인 자료가 nmemb개 만큼 들어갈 메모리 할당, 할당한 메로리 영역은 모든 비트가 0으로 초기화*/
/* 메모리 할당에 성공하면 할당한 영역의 첫 번째 포인터를 반환하고, 실패하면 NULL포인터를 반환*/

/*malloc*/
/*void *malloc(size_t size);*/
/*크기가 size인 메모리를 할당, 할당한 메모리의 값은 정의되지 않음*/
/*메모리 할당에 성공하면 할당한 영역의 첫 번째 포인터를 반환하고, 실패하면 NULL포인터를 반환*/

/*정의- 컴파일러에게 대상의 실제 내용을 생성하게 함. 실제 내용을 생성하고 할당하므로 메모리 사용*/
/*선언-컴파일러에게 대상에 대한 정보를 알려줌. 다만 실제 내용을 할당하지 않으므로 메모리는 사용하지 않음*/
