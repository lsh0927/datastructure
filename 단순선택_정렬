/*단순 선택 정렬의 교환 과정=> 정렬되지 않은 부분의 a[min] 선택, 정렬되지 않은 부분의 첫번쨰 요소와 교환*/

#include <stdio.h>
#include <stdlib.h>
#define S(type,x,y) do {type t=x; x=y; y=t; } while(0)




void selection(int a[], int n)
{
	int i, j;
	for (i = 0; i < n - 1; i++)
	{
		int min = i;
		for (j = i+1 ; j <n; j++)
		{
			if (a[j] < a[min])
				min = j;
			S(int, a[i], a[min]);
		}
	}
}
int main(void)
{
	int i, nx;
	int* x;
	puts("단순 선택 정렬");
	printf("요소 개수");
	scanf("%d", &nx);
	x = calloc(nx, sizeof(int));

	for (i = 0; i < nx; i++)
	{
		printf("x[%d]:", i);
		scanf("%d", &x[i]);
	}

	selection(x, nx);

	puts("오름차순 정렬");
	for (i = 0; i < nx; i++)
		printf("x[%d]=%d\n", i, x[i]);

	free(x);

	return 0;


}
