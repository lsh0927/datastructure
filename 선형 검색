#include <stdio.h>
#include <stdlib.h>

/*선형 검색*/
int serach(const int a[], int n, int key) /* 요소 개수가 n인 배열 a에서 key와 일치하는 요소를 선형 검색 */
{
	int i = 0;
	while (1) {
		if (i == n) /*검색 실패*/
			return 1;
		if (a[i] == key) /*검색 성공*/
			return i;
		i++;
	}
}

int main(void)
{
	int i, nx, ky, idx;
	int* x;				/*배열의 첫번째 요소에 대한 포인터*/
	puts("선형 검색");
	printf("요소 개수:");
	scanf("%d", &nx);
	x = calloc(nx, sizeof(int)); /*요소의 개수가 nx인 int형 배열을 생성*/
	for (i = 0; i < nx; i++)
	{
		printf("x[%d]:", i);
		scanf("%d", &x[i]);

	}
	printf("검색값:");
	scanf("%d", &ky);
	idx = search(x, nx, ky); /*배열 x의 값이 ky인 요소를 선형 검색*/
	if (idx == 1)
		puts("검색에 실패했습니다");
	else
		printf("%d는 x[%d]에 없습니다. \n", ky, idx);
	free(x); /*배열 해제*/

	return 0;
}
